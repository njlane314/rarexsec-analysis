{
  "plugins": [
    {
      "path": "build/RegionsPlugin.so",
      "regions": [
        {
          "region_key": "NUMU_CC_SEL",
          "label": "Muon Neutrino CC Selection",
          "selection_rule": "NUMU_CC",
          "beam_config": "numi_fhc",
          "runs": [
            "run1"
          ]
        }
      ]
    },
    {
      "path": "build/VariablesPlugin.so",
      "variables": [
        {
          "name": "track_length",
          "branch": "track_length",
          "label": "Track Length [cm]",
          "stratum": "backtracked_pdg_codes",
          "bins": {
            "mode": "dynamic",
            "min": 0.0,
            "max": 1000.0,
            "include_out_of_range_bins": true,
            "strategy": "freedman_diaconis"
          },
          "regions": [
            "NUMU_CC_SEL"
          ]
        },
        {
          "name": "n_pfps_gen2",
          "branch": "n_pfps_gen2",
          "label": "Number of Gen2 PFPs",
          "stratum": "inclusive_strange_channels",
          "bins": {
            "mode": "dynamic",
            "min": 0.0,
            "max": 10.0,
            "include_out_of_range_bins": true,
            "strategy": "freedman_diaconis"
          },
          "regions": [
            "NUMU_CC_SEL"
          ]
        },
        {
          "name": "muon_track_length",
          "branch": "muon_track_length",
          "label": "Muon Track Length [cm]",
          "stratum": "inclusive_strange_channels",
          "bins": {
            "mode": "dynamic",
            "min": 0.0,
            "max": 1000.0,
            "include_out_of_range_bins": true,
            "strategy": "freedman_diaconis"
          },
          "regions": [
            "NUMU_CC_SEL"
          ]
        },
        {
          "name": "muon_track_costheta",
          "branch": "muon_track_costheta",
          "label": "Muon cos#theta",
          "stratum": "inclusive_strange_channels",
          "bins": {
            "mode": "dynamic",
            "min": -1.0,
            "max": 1.0,
            "include_out_of_range_bins": true,
            "strategy": "freedman_diaconis"
          },
          "regions": [
            "NUMU_CC_SEL"
          ]
        }
      ]
    },
    {
      "path": "build/StackedHistogramPlugin.so",
      "plots": [
        {
          "variable": "track_length",
          "region": "NUMU_CC_SEL",
          "category_column": "backtracked_pdg_codes",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": true,
          "log_y": true,
          "y_axis_label": "Particle Flows/bin"
        },
        {
          "variable": "n_pfps_gen2",
          "region": "NUMU_CC_SEL",
          "category_column": "inclusive_strange_channels",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": true,
          "log_y": true,
          "y_axis_label": "Particle Flows",
          "selection_cuts": false
        }
      ]
    },
    {
      "path": "build/OccupancyMatrixPlugin.so",
      "occupancy_matrix_plots": [
        {
          "x": "track_length",
          "y": "n_pfps_gen2",
          "region": "NUMU_CC_SEL",
          "output_directory": "plots"
        },
        {
          "x": "muon_track_costheta",
          "y": "muon_track_length",
          "region": "NUMU_CC_SEL",
          "output_directory": "plots"
        }
      ]
    },
    {
      "path": "build/SelectionEfficiencyPlugin.so",
      "efficiency_plots": [
        {
          "region": "NUMU_CC_SEL",
          "selection_rule": "NUMU_CC",
          "channel_column": "incl_channel",
          "signal_group": "inclusive_strange_channels",
          "output_directory": "plots",
          "plot_name": "selection_efficiency",
          "log_y": false
        }
      ]
    },
    {
      "path": "build/RocCurvePlugin.so",
      "roc_curves": [
        {
          "region": "NUMU_CC_SEL",
          "selection_rule": "NUMU_CC",
          "channel_column": "incl_channel",
          "signal_group": "inclusive_strange_channels",
          "variable": "track_length",
          "output_directory": "plots",
          "plot_name": "roc_curve"
        }
      ]
    },
    {
      "path": "build/SnapshotPlugin.so",
      "snapshots": [
        {
          "selection_rule": "NUMU_CC",
          "output_directory": "snapshots",
          "columns": [
            "nominal_event_weight",
            "incl_channel",
            "detector_image",
            "semantic_mask"
          ]
        }
      ]
    }
  ]
}
