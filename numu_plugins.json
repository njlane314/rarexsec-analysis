{
  "plugins": [
    {
      "path": "build/RegionsPlugin.so",
      "regions": [
        {
          "region_key": "NUMU_CC_SEL",
          "label": "Muon Neutrino CC Selection",
          "selection_rule": "NUMU_CC"
        }
      ]
    },
    {
      "path": "build/VariablesPlugin.so",
      "variables": [
        {
          "name": "muon_length",
          "branch": "track_length",
          "label": "Track Length [cm]",
          "stratum": "backtracked_pdg_codes",
          "bins": {
            "n": 200,
            "min": 0.0,
            "max": 1000.0
          },
          "regions": [ "NUMU_CC_SEL" ]
        }
      ]
    },
    {
      "path": "build/StackedHistogramPlugin.so",
      "plots": [
        {
          "variable": "muon_length",
          "region": "NUMU_CC_SEL",
          "category_column": "backtracked_pdg_codes",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": true,
          "log_y": true,
          "y_axis_label": "Particle Flows"
        }
      ]
    }
  ]
}