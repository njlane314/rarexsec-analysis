{
  "plugins": [
    {
      "path": "build/RegionsPlugin.so",
      "regions": [
        {
          "region_key": "NUMU_CC_SEL",
          "label": "Muon Neutrino CC Selection",
          "selection_rule": "NUMU_CC"
        }
      ]
    },
    {
      "path": "build/VariablesPlugin.so",
      "variables": [
        {
          "name": "muon_length",
          "branch": "track_length",
          "label": "Muon Track Length (cm)",
          "stratum": "vector:backtracked_pdg_codes",
          "bins": {
            "n": 50,
            "min": 0.0,
            "max": 500.0
          }
        },
        {
          "name": "muon_theta",
          "branch": "track_theta",
          "label": "Muon Track Theta (rad)",
          "stratum": "vector:backtracked_pdg_codes",
          "bins": {
            "n": 32,
            "min": 0.0,
            "max": 3.2
          }
        },
        {
            "name": "muon_phi",
            "branch": "track_phi",
            "label": "Muon Track Phi (rad)",
            "stratum": "vector:backtracked_pdg_codes",
            "bins": {
                "n": 32,
                "min": -3.2,
                "max": 3.2
            }
        }
      ]
    },
    {
      "path": "build/StackedHistogramPlugin.so",
      "plots": [
        {
          "variable": "muon_length",
          "region": "NUMU_CC_SEL",
          "category_column": "backtracked_pdg_codes",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": false
        },
        {
          "variable": "muon_theta",
          "region": "NUMU_CC_SEL",
          "category_column": "backtracked_pdg_codes",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": false
        },
        {
          "variable": "muon_phi",
          "region": "NUMU_CC_SEL",
          "category_column": "backtracked_pdg_codes",
          "output_directory": "plots",
          "overlay_signal": true,
          "annotate_numbers": false
        }
      ]
    }
  ]
}